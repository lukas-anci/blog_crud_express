<!-- ikeliam head -->
<%- include('../partials/head.ejs') %>

<!-- //ikeliam bendra navigacijos faila dinamiskai -->
<%- include('../partials/nav.ejs')%>

<main role="main">
  <h1 class="display-3">Read our blog</h1>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">
        <% blogs.forEach(({_id,title,author,body,createdAt}) => {%>
        <!-- one card -->
        <div id="one-post" class="col-md-4" data-post-id="<%=_id %>">
          <div class="card mb-4 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%- title%></h5>
              <h6 class="text-muted"><%- author%></h6>
              <p class="card-text"><%- body%></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/blog/single/<%=_id%>" class="btn btn-sm btn-outline-secondary">View</a>
                </div>
                <small class="text-muted"><%- createdAt.toLocaleString()%></small>
              </div>
            </div>
          </div>
        </div>
        <!-- card end -->
        <%})%>
      </div>
    </div>
  </div>
</main>

<%-include('../partials/footer.ejs')%>
